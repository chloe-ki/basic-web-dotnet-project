﻿@using Assignment3.ViewModels;
@model Courses
@{
    ViewData["Title"] = "Create Courses";
}

<div class="text-center">
    <h1 class="display-4">Create Course</h1>
</div>

<form asp-action="CreateCourse">
    <div class="form-group">
        <label asp-for="CourseID" class="control-label"></label>
        <input asp-for="CourseID" class="form-control" value="e.g. COSC1234" />
    </div>

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CreditPoints" class="control-label"></label>
        <select asp-for="CreditPoints" class="form-control">
            <option value="">Select Credit Points</option>
            @for (int i = 1; i <= 12; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Career" class="control-label"></label>
        <select asp-for="Career" class="form-control">
            <option value="">Select Career</option>
            <option value="Undergraduate">Undergraduate</option>
            <option value="Postgraduate">Postgraduate</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Coordinator" class="control-label"></label>
        <input asp-for="Coordinator" class="form-control" value="e.g. John Doe" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>

    <!-- to display error message-->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
    }

</form>